<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <stroke android:width="2dp" android:color="@color/transparent" />
            <solid android:color="@color/transparent15" />
            <size android:width="60dp" android:height="44dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape>
            <stroke android:width="2dp" android:color="#fafafa" />
            <solid android:color="#fafafa" />
            <size android:width="60dp" android:height="44dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <stroke android:width="2dp" android:color="@color/error" />
            <solid android:color="#fafafa" />
            <size android:width="60dp" android:height="44dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>